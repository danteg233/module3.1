<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Suite1">
    <test name="Arithmetic tests" parallel="true" thread-count="4">
        <parameter name="a" value='5'/>
        <parameter name="b" value='5'/>
        <parameter name="expected" value="10"/>
        <classes>
            <class name="com.company.basic.AddTest" />
            <class name="com.company.basic.SubTest" />
            <class name="com.company.basic.MulTest" />
            <class name="com.company.basic.DivTest" />
        </classes>
    </test>

    <test name="Test(PosNegPowSqrtTest)" parallel="true" thread-count="4">
        <classes>
            <class name="com.company.IsPositiveTest"/>
            <class name="com.company.IsNegativeTest"/>
            <class name="com.company.PowTest"/>
            <class name="com.company.SqrtTest"/>
        </classes>
    </test>

    <test name="Trigonometric tests">
        <groups>
            <run>
                <include name="TgTest"/>
                <exclude name="CtgTest"/>
                <include name="SinTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.company.trigonometry.TgTest" />
            <class name="com.company.trigonometry.CtgTest"/>
            <class name="com.company.trigonometry.SinTest"/>
        </classes>
    </test>
</suite>